keys = list(statements.keys())
random.shuffle(keys)

score = 0

for text in keys:
    user_choice = st.radio(f"**{text}**", ["Human", "AI"], key=text)
    if user_choice == statements[text]:
        score += 1

st.markdown("---")
st.subheader(f"Your Score: {score} / {len(keys)}")

if score == len(keys):
    st.success("ğŸ‰ Perfect! You are officially an AI Detector Master!")
elif score >= 7:
    st.info("ğŸ§  Great job! You can spot AI like a pro.")
elif score >= 4:
    st.warning("ğŸ™‚ Not bad! Keep learning.")
else:
    st.error("ğŸ˜… AI fooled you! Try again.")
